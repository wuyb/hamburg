$('#new-account').html($('<%= escape_javascript(render(:partial => "form", :object=>@account)) %>'))
$('#new-account-modal').modal('toggle');

if ($('#account_category').val() != "信用帐户") {
  $('#max_credit_div').hide();
} else {
  $('#max_credit_div').show();
}

$('#account_category').bind('change', function(){
  if ($('#account_category').val() != "信用帐户") {
    $('#max_credit_div').hide();
  } else {
    $('#max_credit_div').show();
  }
});