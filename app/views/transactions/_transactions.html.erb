
        <div class="row-fluid">
            <div class="span8">
                <%= form_tag("/transactions", :method => "get", :remote => true) do %>
                开始：<input type="text" value='<%= @start_date > Time.at(0) ? (l @start_date) : "" %>' id="start_date" style="width:100px" />&nbsp;
                结束：<input type="text" value="<%= l @end_date %>" id="end_date" style="width:100px" />
                <input type="hidden" name="start_date" value="<%= @start_date > Time.at(0) ? @start_date : "" %>" id="start_date_value"/>
                <input type="hidden" name="end_date" value="<%= @end_date %>" id="end_date_value"/>
                <input type="hidden" name="flot_type" value="by_date" id="flot_type_value"/>
                <%= submit_tag "显示", :class=>"btn", :style=>"margin-bottom:8px"%>
                <% end %>
            </div>
            <div class="span4">
                <!-- the range buttons -->
                <div class="btn-group" data-toggle="buttons-radio" style="float:right;margin-bottom:10px" id="date-filter">
                    <%= link_to '一周', {:controller=>'transactions', :action=>'index', :by=>"week"}, :remote => true, :class=>"btn", :id=>"filter_week" %>
                    <%= link_to '一月', {:controller=>'transactions', :action=>'index', :by=>"month"}, :remote => true, :class=>"btn", :id=>"filter_month" %>
                    <%= link_to '一年', {:controller=>'transactions', :action=>'index', :by=>"year"}, :remote => true, :class=>"btn", :id=>"filter_year" %>
                    <%= link_to '全部', {:controller=>'transactions', :action=>'index'}, :remote => true, :class=>"btn", :id=>"filter_all" %>
                </div>
            </div>
      </div>
        <div class="well">
      <div class="tabbable">
        <ul class="nav nav-tabs" id="flot-tab">
            <li class="active"><a href="#by_date" data-toggle="tab" name="by_date">收支趋势</a></li>
            <li><a href="#by_category" data-toggle="tab" name="by_category">收支类别</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="by_date">
                    <div class="row-fluid">
                        <div class="span10">
                            <h4 style="text-align:center" id="flot_transactions_by_date_title"><%= flot_transactions_by_date_title @start_date, @end_date, @by %></h4>
                        </div>
                        <div class="span2" style="float:right">
                            <input type="checkbox" id="show_income_checkbox" checked="true"> 收入 </input> 
                            <input type="checkbox" id="show_expense_checkbox" checked="true"> 支出 </input> 
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div id="transactions-by-time" style="height:300px" />
                        </div>
                    </div>
            </div>
            <div class="tab-pane" id="by_category">
                    <div class="row-fluid">
                        <div class="span12">
                            <h4 style="text-align:center" id="flot_transactions_by_date_title"><%= flot_transactions_by_date_title @start_date, @end_date, @by %></h4>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6">
                            <div id="transactions-by-category-income" style="height:300px;width:300px" />
                        </div>
                        <div class="span6">
                            <div id="transactions-by-category-expense" style="height:300px;width:300px" />
                        </div>
                    </div>
            </div>
        </div>
      </div>
      <br/>
      <div style="float:right">
        * 以上金额以人民币计算
      </div>
      </div>
        </div>
    <br/>
    <div class="row-fluid">
        <div class="span12">
            <table class="table table-striped" id="transactions-table">
                <tr>
                    <th><%= sortable 'account_id', '帐户' %></th>
                    <th><%= sortable 'amount', '金额' %></th>
                    <th><%= sortable 'transaction_type', '类型' %></th>
                    <th><%= sortable 'transaction_category_id', '类别' %></th>
                    <th><%= sortable 'to_account_id', '转入帐户' %></th>
                    <th><%= sortable 'created_at', '日期' %></th>
                    <th></th>
                    <th></th>
                </tr>
                <% @paged_transactions.each do |transaction| %>
                    <%= render :partial=>transaction %>
                <% end %>
            </table>
            <div style="float:right;display:inline">
                    <%= paginate @paged_transactions, :remote=>true, :params => {:by=>@by} %>
            </div>
        </div>
    </div>
<div id="new-transaction"/>
