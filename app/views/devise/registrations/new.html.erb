<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "well"}) do |f| %>
  <% if session["devise.weibo_data"] %>
    <h2>完成注册</h2>
    <%= f.hidden_field(:provider, :value=>session["devise.weibo_data"].provider) %>
    <%= f.hidden_field(:uid, :value=>session["devise.weibo_data"].uid) %>
  <% else %>
    <div class="row">
      <div class="span2">
        <h2>注册</h2>
      </div>
      <div class="span2 offset4">
        <%= link_to "使用新浪微博注册", user_omniauth_authorize_path(:weibo), :class=>"btn" %><br/><br/>
      </div>
      <div class="span2">
        <%= link_to "使用腾讯微博注册", user_omniauth_authorize_path(:weibo), :class=>"btn" %><br/><br/>
      </div>
    </div>
  <% end %>
  
  <p><%= f.label :email %>
  <%= f.email_field :email %></p>

  <p><%= f.label :password %>
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "确 定", :class=>"btn btn-primary btn-large" %></p>
<% end %>
