<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=>{:class=>"well"}) do |f| %>
    <div class="row">
      <div class="span2">
        <h2>登录</h2>
      </div>
      <div class="span2 offset4">
        <%= link_to "使用新浪微博登录", user_omniauth_authorize_path(:weibo), :class=>"btn" %><br/><br/>
      </div>
      <div class="span2">
        <%= link_to "使用腾讯微博登录", user_omniauth_authorize_path(:weibo), :class=>"btn" %><br/><br/>
      </div>
    </div>

    <% if flash[:alert] %>
    <div class="alert alert-error">
      <button class="close" data-dismiss="alert">×</button>
      <%= flash[:alert] %>
    </div>
    <% end %>

  <p><%= f.label :email %>
  <%= f.email_field :email %></p>

  <p><%= f.label :password %>
  <%= f.password_field :password %></p>

  <% if devise_mapping.rememberable? -%>
    <p><label class="checkbox"><%= f.check_box :remember_me %>记住我</label></p>
  <% end -%>

  <p><%= f.submit "确 定", :class=>"btn btn-primary btn-large" %></p>
<% end %>
